.home .hero img
  max-width 450px!important

body
  -webkit-font-smoothing antialiased
  -webkit-tap-highlight-color transparent
  -moz-osx-font-smoothing grayscale
  button
    border none
    outline none

div[class~="language-batch"]:before
  content "batch"

div[class~="language-powershell"]:before
  content "powershell"

div[class~="language-csharp"]:before
  content "csharp"

div[class~="language-cpp"]:before
  content "cpp"
